# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/medical_warehouse?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# External Integrations
NUPCO_API_URL=https://api.nupco.com
NUPCO_API_KEY=your-nupco-api-key
ETIMAD_API_URL=https://api.etimad.sa
ETIMAD_API_KEY=your-etimad-api-key
ERP_API_URL=https://erp.university.edu.sa
ERP_API_KEY=your-erp-api-key
RASID_API_URL=https://api.rasid.gov.sa
RASID_API_KEY=your-rasid-api-key

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
NOTIFICATION_EXPIRY_DAYS=30

# Barcode
BARCODE_PREFIX=MWH
